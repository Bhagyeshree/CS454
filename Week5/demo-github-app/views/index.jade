doctype html
html(ng-app='app')
head
  base(href='/')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-resource.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-route.min.js')

  script(src='/js/core.js')

  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')

  body
    header(class="navbar navbar-inverse navbar-static-top")
      div(class="container")
        div(class="navbar-header")
          a(class="navbar-brand", href="/") Node//Angular
        nav(class="collapse navbar-collapse bs-navbar-collapse", role="navigation")
          ul(class="nav navbar-nav")
            each name in ["Top 3", "Versus"]
              if (name == menu)
                li.active
                  a(href =name.replace(/\s/g, '').toLowerCase())= name
              else
                li
                  a(href =name.replace(/\s/g, '').toLowerCase())= name

    main(class="container")
      div(class="jumbotron")
        h3 Combining Node and Angular
        div(style="margin-top: 20px")
          a(class="btn btn-success", role="button", href="/top3") Top3 »
          a(class="btn btn-success" style="margin-left: 20px", role="button", href="/versus") Versus »
